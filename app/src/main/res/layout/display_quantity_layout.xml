<?xml version="1.0" encoding="utf-8"?>
<com.example.n930044.myapplication.DisplayAddQuantityLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        style="@style/goods_detail_left_title_text_style"
        android:text="数量" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/display_item_normal_bg"
        android:divider="@drawable/display_item_diver"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">


        <LinearLayout
            android:id="@+id/reduce_view"
            style="@style/display_quantity_item_layout_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/order_icon_minus" />

        </LinearLayout>

        <LinearLayout style="@style/display_quantity_item_layout_style">

            <TextView
                android:id="@+id/quantity_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:scrollHorizontally="true"
                android:textColor="#FF2B2B2B"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_view"
            style="@style/display_quantity_item_layout_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/order_icon_add" />

        </LinearLayout>
    </LinearLayout>
</com.example.n930044.myapplication.DisplayAddQuantityLayout>